<div class="homepage-container">
<%- flash.each do |key, value| -%>
<div data-alert class="alert-box">
  <div class="flash flash-<%= key %>">
    <%= value %>
  </div>
  <a href="#" class="close">&times;</a>
  </div>
<%- end -%>

  <div class="headline-box">
    <h1 class="text-center animated fadeInDown">Share Necessities connects volunteers to the physical needs of human services non-profits via wishlists.</h1>
    </div>

  <div class="row">
    <div class="small-12 column i-am">
      <h2 class="text-center">I am...</h2>
    </div>
    <div class="small-6 column">
      <h2><%= link_to "a volunteer, and I want to help.", organizations_path %></h2>
    </div>
    <div class="small-6 column">
    <h2><%= link_to "an organizer, and I want to add my organization.", new_organization_path %></h2>
    </div>
  </div>
</div>

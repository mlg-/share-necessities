<div class="homepage-container">
<%- flash.each do |key, value| -%>
<div data-alert class="alert-box">
  <div class="flash flash-<%= key %>">
    <%= value %>
  </div>
  <a href="#" class="close">&times;</a>
  </div>
<%- end -%>

  <div class="headline-box">
    <h1 class="text-center animated fadeInDown">Share Necessities connects volunteers to the material needs of humanitarian non-profits via wishlists.</h1>
    </div>

  <div class="row">
    <div class="small-12 columns">
      <h2 class="text-center i-am">I am...</h2>
    </div>
    <div class="small-6 columns">
      <h2><%= link_to "a volunteer, and <br/> I want to help.".html_safe, organizations_path %></h2>
    </div>
    <div class="small-6 columns">
    <h2><%= link_to "an organizer, and <br/> I want to add my organization.".html_safe, new_organization_path %></h2>
    </div>
  </div>
</div>

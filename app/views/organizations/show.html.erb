<div class="row">
  <div class="small-12 columns">
    <h1><%= @organization.name %></h1>
  </div>
</div>
<div class="row">
  <div class="small-6 columns">
    <%= image_tag(@organization.display_photo) %><br/>
    <% if @organization.organizer?(current_user) %>
    <ul>
      <li><%= link_to "Edit Organization Settings", edit_organization_path(@organization.id) %></li>
      <li><%= link_to "Add Items to Wishlist", new_organization_item_path(organization_id: @organization.id) %></li>
      <li><%= link_to "See Incoming Items", organization_items_path(@organization.id) %></li>
    </ul>
    <% end %>
  </div>

  <div class="small-5 offset-1 columns">
  <h2>Contact Information</h2>
    <%= @organization.address %><br/>
    <%= @organization.city %>,
    <%= @organization.state %>
    <%= @organization.zip %><br/>
    <%= @organization.phone %><br/>
    <%= @organization.email %><br/>
    <%= @organization.description %></br>
    <%= link_to "Website <i class=\"fa fa-external-link\"></i>".html_safe,
     @organization.url %>
    <%= @organization.delivery_instructions %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <h2>All Wishlist Items</h2>
    <table>
      <th>
        <tr>
          <td width="150">Item Name</td>
          <td width="50">Quantity</td>
          <td width="200">Description</td>
          <td width="50">Link</td>
          <td width="80" class="got-it">Get It</td>
          <% if @organization.organizer?(current_user) %>
            <td width="50">Edit</td>
            <td width="50">Delete</td>
          <% end %>
        </tr>
        </th>
        <% @organization.items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <% if item.description %>
            <td><%= item.description %></td>
          <% else %>
            <td></td>
          <% end %>
          <% if item.url %>
            <td><%= link_to "<i class=\"fa fa-external-link\"></i>".html_safe,
             item.url %></td>
          <% else %>
            <td></td>
          <% end %>
          <td class="got-it"><%= render partial: "dibs/form", locals: { item: item,
           dib: @dib, method: :create, organization_id: @organization.id } %></td>
          <% if @organization.organizer?(current_user) %>
            <td><%= link_to "Edit", edit_organization_item_path(organization_id: @organization.id, item_id: item.id), id: "item-#{item.id}-edit" %></td>
            <td><%= link_to "Delete", organization_item_path(organization_id: @organization.id, id: item.id), id: "item-#{item.id}-delete", method: :delete %></td>
          <% end %>
          </tr>
        <% end %>
    </table>
  </div>
</div> <!--close parent row-->


<%= form_for(organization) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %>

  <%= f.label :zip, "Zip Code" %>
  <%= f.text_field :zip %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :display_photo, "Display Photo/Logo" %>
  <%= f.file_field :display_photo %>

  <%= f.label :delivery_instructions %>
  <%= f.text_area :delivery_instructions %>

  <%= f.submit class: "button" %>
<% end %>
